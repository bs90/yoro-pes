<h2 style="text-align: center">RANKINGS</h2>
<% rank = 0 %>
<% (1..3).to_a.each do |i| %>
  <h3>Group <%= i %></h3>
  <table class="table table-striped" style="text-align: center">
    <thead>
      <tr>
        <th style="text-align: center">RANK</th>
        <th style="text-align: center">IMAGE</th>
        <th style="text-align: center">PLAYER</th>
        <th style="text-align: center">PLAYED</th>
        <th style="text-align: center">WON</th>
        <th style="text-align: center">DRAWN</th>
        <th style="text-align: center">LOST</th>
        <th style="text-align: center">POINTS</th>
      </tr>
    </thead>

    <tbody>
      <% groups = Player::GROUP_DIVIDE %>
      <% @players[groups[i-1]..groups[i]].each do |player| %>
        <% rank += 1%>
        <tr>
          <td style="vertical-align: middle; font-size: 15px;"><%= rank %></td>
          <td><%= link_to image_tag(player.image_url, style: "width: 50px"), player_path(player.id) %></td>
          <td style="vertical-align: middle; font-size: 15px;"><%= player.name %></td>
          <td style="vertical-align: middle; font-size: 15px;"><%= player.games.count %></td>
          <td style="vertical-align: middle; font-size: 15px;"><%= player.won_games.count %></td>
          <td style="vertical-align: middle; font-size: 15px;"><%= player.drawn_games.count %></td>
          <td style="vertical-align: middle; font-size: 15px;"><%= player.lost_games.count %></td>
          <td style="vertical-align: middle; font-size: 15px;"><%= player.elo %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
