<%= form_for @tournament, :html => { :multipart => true } do |f| %>
  <% if @tournament.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tournament.errors.count, "error") %> prohibited this tournament from being saved:</h2>

      <ul>
      <% @tournament.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :time %><br>
    <%= f.text_field :time %>
  </div>
  <div class="field">
    <%= f.label :type %><br>
    <%= f.select :tournament_type, Tournament::TOURNAMENT_TYPES %>
  </div>
  <div class="field">
    <%= f.label :rule %><br>
    <%= f.text_field :rule %>
  </div>
  <div class="field">
    <%= f.label :url %><br>
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label "First place" %><br>
    <%= f.collection_select :first, Player.all, :id, :name, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label "Second place" %><br>
    <%= f.collection_select :second, Player.all, :id, :name, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label "Third place" %><br>
    <%= f.collection_select :third, Player.all, :id, :name, :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label "Data file" %><br>
    <%= file_field_tag :data_file %>
  </div>
  <div class="actions">
    <%= f.submit "CREATE TOURNAMENT", class: "btn btn-success" %>
  </div>
<% end %>
